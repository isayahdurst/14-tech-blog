<div class='container'>
    <section class='section is-medium pb-0 mb-0' id='blog-post'>
        <h1 class='title'>
            /**<br />*
            <span class='has-text-danger'>@param</span>
            <span>{title}</span>
            <span class='has-text-info'>{{post.title}}</span>
            <br />
            *
            <span class='has-text-danger'>@param</span>
            <span>{date}</span>
            <span class='has-text-info'>{{post.createdAt}}</span>
            <br />
            *
            <span class='has-text-danger'>@author</span>
            <span class='has-text-info'>{{post.user.username}}</span>
            <br />
            */
        </h1>
        {{#if post.is_author}}
            <button class='button is-warning' id="edit-post-btn">Edit( )</button>
            <button class='button is-danger' id="delete-post-btn" data-postID="{{post.id}}">Delete( )</button>
        {{/if}}
        <hr />
        <h2 class='subtitle is-3'>
            {{#each post.contentArr as |line|}}
                <p class="blog-content">{{line}}</p>
                <br>
            {{/each}}
        </h2>
    </section>
    <section class='section is-medium pt-1 mt-1' id='blog-comments'>
        <hr />
        <h2 class='title'>Comments</h2>
        {{#if user}}
            <article class='media'>
                <div class='media-content'>
                    <div class='field'>
                        <p class='control'>
                            <textarea
                                class='textarea'
                                placeholder='Add a comment...'
                                id='comment-content'
                            ></textarea>
                        </p>
                    </div>
                    <nav class='level'>
                        <div class='level-left'>
                            <div class='level-item'>
                                <a
                                    class='button is-info'
                                    id='submit-comment'
                                    data-postID={{post.id}}
                                >Submit</a>
                            </div>
                        </div>
                    </nav>
                </div>
            </article>
        {{/if}}
        {{#unless user}}
            <div class='notification is-danger'>
                <button class='delete'>
                </button>
                <p class='subtitle'>Sign in to write a comment</p>
            </div>
        {{/unless}}
        {{#each post.comments as |comment|}}
        <article class='media'>
            <div class='media-content'>
                <div class='content'>
                    <p class="subtitle is-4">
                        <strong>@{{comment.user.username}}</strong>
                        <br />
                        {{comment.content}}
                        <br />
                        <small>{{comment.createdAt}}</small>
                    </p>
                </div>
        </article>
        {{/each}}
    </section>
    <section class="section is-hidden" id="edit-post-section">
        <h2 class="title">Edit Post: </h2>
        <hr>
        <form action="">    
            <div class="field">
                <label for="" class="label">
                    Title:
                </label>
                <div class="control">
                    <input type="text" class="input" placeholder="Title" id="edit-post-title" value="{{post.title}}">
                </div>
            </div>
            <div class="field">
                <label for="" class="label">Content:    </label>
                <div class="control">
                    <textarea class='input' name="" id="edit-post-content" style="min-width: 100%; max-width: 100%; min-height: 20em" >{{post.content}}</textarea>
                </div>
            </div>
            <div class="control is-grouped">
                <button class="button is-info" id="submit-edit" data-POSTID={{post.id}}>Commit( )</button>
                <button class="button has-text-danger" id="cancel-edit">Abort( )</button>
            </div>
        </form>
    </section>
</div>
<script src="../js/post-page.js"></script>