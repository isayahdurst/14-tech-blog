<div class='container'>
    <section class='section'>
        <div class='notification has-background-warning'>
            <button class='delete'></button>
            <p>Welcome to your dashboard! Here is where you can view and edit
                blog posts that you've created.
                <br />Click the button below to get started.</p>
        </div>
    </section>
    <section class='section is-hidden' id='post-form'>
        <div class='box has-background-light'>

            <form action=''>
                <div class='field'>
                    <label for='' class='label'>Title:</label>
                    <div class='control'>
                        <input
                            type='text'
                            class='input'
                            placeholder='Blog Title'
                            id='post-title'
                        />
                    </div>
                </div>
                <div class='field'>
                    <label for='' class='label'>Content:</label>
                    <div class='control'>
                        <textarea
                            type='textarea'
                            class='input'
                            placeholder='Content...'
                            style='min-height: 20em; min-width: 100%'
                            id='post-content'
                        ></textarea>
                    </div>
                </div>
                <div class='field is-grouped'>
                    <div class='control'>
                        <button
                            class='button is-info'
                            id='submit-post-btn'
                        >Post.Init( )</button>
                    </div>
                    <div class='control'>
                        <button
                            class='button has-text-danger'
                            id='cancel-post-btn'
                        >Abort( )</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <section class='section has-text-centered' id='create-post'>
        <button class='button is-info is-large' id='create-post-btn'>
            Create Post
        </button>
    </section>
    <section class='section' id='user-posts'>
        {{#each posts as |post|}}
            <div class='box post has-background-info' data-id={{post.id}}>
                <p class='title has-text-white'>{{post.title}}</p>
                <p class='subtitle has-text-white'>{{post.content}}</p>
                <small class='has-text-white'>{{post.createdAt}}</small>
            </div>
        {{/each}}
    </section>
</div>
<script src='../js/dashboard.js'></script>